{
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
	},
	"env": {
		"browser": true,
		"node": true
	},
	"globals": {
		"Promise": true
	},
	"extends": "eslint:recommended",
    "rules": {
		"semi": "error",
		"no-unused-vars": "warn",
		"comma-dangle": ["error", "never"],
		"no-trailing-spaces": "error",
		"eol-last": ["error", "always"],
		"space-infix-ops": "error",
		"no-unused-expressions": "error"
    }
}
